<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<prerequisites>
		<maven>3.0</maven>
	</prerequisites>

	<parent>
		<groupId>com.justdavis.jessentials</groupId>
		<artifactId>jessentials-parent</artifactId>
		<version>0.1.0-SNAPSHOT</version>
	</parent>

	<groupId>com.justdavis.karl.rpstourney</groupId>
	<artifactId>rps-tourney-parent</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>rps-tourney-parent</name>
	<description>
		The parent POM for the "Rock-Paper-Scissors Tourney" games.
	</description>

	<modules>
		<module>rps-tourney-api</module>
		<module>rps-tourney-console</module>
	</modules>

	<properties>
		<!-- The version of Java that we'll set our game's projects to use. Android 
			does not currently support anything later than Java 6, so that's used as 
			the default. -->
		<javaSourceVersion>1.6</javaSourceVersion>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.justdavis.karl.rpstourney</groupId>
				<artifactId>rps-tourney-api</artifactId>
				<version>${project.version}</version>
			</dependency>

			<dependency>
				<!-- Used for all sorts of misc. things. -->
				<groupId>com.justdavis.jessentials</groupId>
				<artifactId>jessentials-misc</artifactId>
				<version>0.1.0-SNAPSHOT</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<!-- Set the Java source version used by the compiler. -->
						<source>${javaSourceVersion}</source>
						<target>${javaSourceVersion}</target>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

</project>
