<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
          http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<!-- The majority of the application's web.xml configuration is provided 
		via Servlet 3.0's javax.servlet.ServletContainerInitializer mechanism. See 
		the com.justdavis.karl.rpstourney.webapp.GameWebApplicationInitializer class 
		for more details. -->

	<welcome-file-list>
		<!-- This is mapped to HomeController. -->
		<welcome-file />
	</welcome-file-list>
	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<!-- Prevent JSP directives from producing a bunch of unnecessary whitespace. -->
			<!-- FIXME: This doesn't seem to be actually taking effect. -->
			<trim-directive-whitespaces>true</trim-directive-whitespaces>
		</jsp-property-group>
	</jsp-config>
</web-app>
